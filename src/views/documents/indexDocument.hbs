<div class="row">
    <div class="containerEdit">
        <div class="card-header text-center">
            <h3> <small class="text-muted">Editor</small></h1>
        </div>
        <div class="card-body-mane">


            <div id="editor">

            </div>




        </div>
    </div>


    <div class="containerView">
        <div class="card-header text-center">
            <h3> <small class="text-muted">Vista</small></h1>
        </div>
        <div class="card-body-mane">

            <div id="viewDoc">

            </div>





        </div>


    </div>


    <div class="containerInfo">
        <div class="card-header text-center">
            <h3> <small class="text-muted">Datos del Documento</small></h1>
        </div>
        <div class="card-body-mane text-center mt-4">

            <div class="contanerButtons ">
                <button type="button" class="btn btn-success mr-2">Subir Documento</button>
                <button type="button" class="btn btn-success mr-2">Guardar</button>
                <button type="button" class="btn btn-success mr-2">Editar</button>
                <button type="button" class="btn btn-danger mr-2">Eliminar</button>
            </div>
            





        </div>



    </div>





</div>


<script>
    var options = {
        theme: 'snow'
    };

    var optionsViewer = {
        "theme": "snow",
        "modules": {
            "toolbar": false
        },
        "readOnly": true
    };


    var quill = new Quill('#editor', options);

    var quillview = new Quill('#viewDoc', optionsViewer)


    quill.on('text-change', function (delta, oldDelta, source) {
        var justHtml = quill.root.innerHTML;

        quillview.root.innerHTML = justHtml;
    });




</script>