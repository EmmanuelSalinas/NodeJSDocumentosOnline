<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-5 text-center">
            <div class="card-header">
                <h1> <small class="text-muted">Registro</small></h1>
            </div>
            <img src="/img/icon.png" alt="Logo" class="logo rounded-circle mx-auto d-block  m-4">
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{mail}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="pass" placeholder="Password" value="{{pass}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confpass" placeholder="Password" value="{{confpass}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">
                            SignUp
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>